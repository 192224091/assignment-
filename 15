#include <stdio.h>

int main() {
    int n, i;
    printf("Total number of elements: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter %d numbers in array: ", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    printf("The elements entered: ");
    for(i = 0; i < n; i++)
        printf("%d, ", *(arr + i));  // printing elements using pointer
    return 0;
}
Output 537
